#!/usr/bin/env node
 
'use strict';

const cli = require('../cli');

(()=>{
	new Promise((resolve, reject)=>{
		try{
			cli(process.argv.slice(2)).then(()=>resolve()).catch(err => reject(err));
		}
		catch(err){
			reject(err);
		}
	}).then(()=>{
		process.exitCode = 0;
	}).catch(err => {
		process.stderr.write(err.message);
		process.exitCode = 1;
	});
})();
